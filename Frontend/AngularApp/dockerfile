# Copiar los archivos del proyecto
COPY package*.json ./
RUN npm install

COPY . .

# Compilar la app Angular para producci贸n
RUN npm run build

# Etapa 2: Servir la app usando Nginx
FROM nginx:alpine

# Copiar el build generado al directorio de Nginx
COPY --from=build /app/dist/AngularApp /usr/share/nginx/html

# Copiar configuraci贸n personalizada de Nginx si tienes una
# COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
